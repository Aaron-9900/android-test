<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:paddingVertical="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/company_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp" />

        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/company_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/job_title"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/company_logo"
            app:layout_constraintTop_toBottomOf="@+id/job_title"
            android:id="@+id/job_company"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/job_type"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/company_logo"
        app:layout_constraintTop_toBottomOf="@+id/job_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
        android:id="@+id/job_location"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/company_logo"
        app:layout_constraintTop_toBottomOf="@+id/job_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_added"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/company_logo"
        app:layout_constraintTop_toBottomOf="@+id/job_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/date_added"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/Divider"/>

</androidx.constraintlayout.widget.ConstraintLayout>